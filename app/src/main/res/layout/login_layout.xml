<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondoprincipal"
    android:padding="15dp">

   <!-- <ImageView
        android:id="@+id/imagenMoneda"
        android:src="@drawable/dogecoin"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_marginStart="-80dp"
        android:layout_height="200dp"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/shadoweffect"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginTop="180dp"
        android:text="Inicia Sesión"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCorreoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/email"
        android:hint="Correo electrónico"
        android:drawablePadding="15dp"
        android:text="ruedachaconnelson@gmail.com"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etContraLogin"
        android:layout_width="match_parent"
        android:hint="Contraseña"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="15dp"
        android:text="123*"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textColor="@color/black"
        android:inputType="textPassword"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="180dp"
        app:strokeColor="@color/white"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/naranja"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Inicia Sesión"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterLogin"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="180dp"
        app:strokeColor="@color/white"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/naranja"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Regístrate gratis"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Quieres vender tus prductos? Registrate como vendedor"/>



</LinearLayout>